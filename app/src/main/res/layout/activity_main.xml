<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">


    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userNameTxt" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/your_name" android:importantForAutofill="no" tools:targetApi="o"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/userMailTxt" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:hint="@string/your_mail" android:importantForAutofill="no" tools:targetApi="o"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/resultTxt" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/userMailTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" android:textAlignment="center"/>
    <Button
            android:text="@string/guadarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/resultTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"/>
</android.support.constraint.ConstraintLayout>